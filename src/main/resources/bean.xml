<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

    <bean name="blueColor" class="com.sagarandcompany.DepedencyInjectation.solution.BlueColor"/>
    <bean name="redColor" class="com.sagarandcompany.DepedencyInjectation.solution.RedColor"/>
    <bean name="colorManager" class="com.sagarandcompany.DepedencyInjectation.solution.ColorManager">
        <property name="color" ref="redColor"/>
    </bean>

</beans>